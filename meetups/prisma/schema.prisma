model Meetups {
  id           Int       @id @default(autoincrement())
  name         String
  description  String
  date         DateTime
  place        String
  userId       Int

  meetupTags   MeetupTags[]
  userRecords  UserRecords[]

  users        Users   @relation(fields: [userId], references: [id])
}

model MeetupTags {
  id           Int       @id @default(autoincrement())
  meetupId     Int
  tag          String

  meetup       Meetups   @relation(fields: [meetupId], references: [id])

  @@unique([meetupId, tag])
}

model Users {
  id       Int        @id @default(autoincrement())
  username String     @unique
  password String
  role     Role     

  meetups  Meetups[]
  records  UserRecords[]
}

model UserRecords {
  id           Int       @id @default(autoincrement())

  meetupId     Int
  meetup       Meetups   @relation(fields: [meetupId], references: [id])

  userId       Int
  users        Users     @relation(fields: [userId], references: [id])
}